<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andreslim.myapplication">


    <uses-permission-sdk-23 android:name="android.permission.CAMERA"></uses-permission-sdk-23>
    <uses-permission-sdk-23 android:name="android.permission.CALL_PHONE"></uses-permission-sdk-23>




    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"




            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"




            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                //Copiar esta linea
                <category android:name="android.intent.category.LAUNCHER" />
                //Copiar esta linea
            </intent-filter>
        </activity>



        <activity android:name=".Actividad2">
            //Actividad 2
            <action android:name="android.intent.action.ACTIVIDAD2" />
            //Escribir el nombre de la actividad en mayusculas (sus MAIN)
            <category android:name="android.intent.category.LAUNCHER" />
            /Cambiar por default (sustituyendo LAUNCHER=activudad principal)
        </activity>
        //Fin de actividad 2


        <activity android:name=".Actividad3" >

            <action android:name="android.intent.action.ACTIVIDAD3" />
            <category android:name="android.intent.category.LAUNCHER" />

        </activity>


        <activity android:name=".Actividad4">

            <action android:name="android.intent.action.ACTIVIDAD4" />
            <category android:name="android.intent.category.LAUNCHER" />

        </activity>




    </application>

</manifest>